<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yz.yx.dao.PostDao">
    <!--List<Post> getAllPost();-->
    <select id="getAllPost" resultType="com.yz.yx.bean.Post">
        SELECT * FROM post_info
    </select>

    <!--Post getPostById(Integer pid);-->
    <select id="getPostById" resultType="com.yz.yx.bean.Post">
        SELECT * FROM post_info WHERE postId=#{pid}
    </select>

</mapper>